<section class="container text-center">
  <section class="col-md-4 offset-md-4 devise">
    <h2>Cadastre-se</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nome %><br />
        <%= f.text_field :name, placeholder: 'Digite seu nome' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: 'Digite seu email' %>
      </div>

      <div class="field">
        <%= f.label :senha %><br />
        <%= f.password_field :password, autocomplete: "new-password" %><br />
        <small>6 caracteres mÃ­nimos</small>
      </div>

      <div class="field">
        <%= f.label :confirme_sua_senha %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Salvar", class: 'btn btn-success' %>
      </div>
    <% end %>

    <br />

    <%= link_to 'Voltar', :back, class: 'btn btn-warning' %>
  </section>
</section>
